# Financial Returns Optimizer - Environment Configuration Template
# Copy this file to .env.local and update with your actual values

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================

# API Base URLs
REACT_APP_API_URL=http://localhost:8000
REACT_APP_AGENT_API_URL=http://localhost:8000

# Development Settings
REACT_APP_ENV=development
REACT_APP_DEBUG=true

# Optional: External Services
# REACT_APP_SENTRY_DSN=your_sentry_dsn_here
# REACT_APP_ANALYTICS_ID=your_analytics_id_here

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================

# Python Environment
PYTHON_ENV=development
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=1

# =============================================================================
# DATA & ML CONFIGURATION
# =============================================================================

# Data Sources
HISTORICAL_DATA_FILE=src/backend/data/histretSP.xls
OUTPUT_DIR=src/backend/output
LOGS_DIR=src/backend/logs

# ML Models
ML_MODEL_PATH=saved_models/
MODEL_CACHE_ENABLED=true
MODEL_RETRAIN_INTERVAL=86400  # 24 hours in seconds

# =============================================================================
# AGENT CONFIGURATION
# =============================================================================

# Agent Settings
AGENT_TIMEOUT=30
AGENT_RETRY_COUNT=3
AGENT_LOG_LEVEL=INFO

# Workflow Configuration
WORKFLOW_CACHE_ENABLED=true
WORKFLOW_TIMEOUT=60

# =============================================================================
# DATABASE CONFIGURATION (if applicable)
# =============================================================================

# Database URL (uncomment if using database)
# DATABASE_URL=postgresql://user:password@localhost:5432/financial_optimizer
# DATABASE_POOL_SIZE=10
# DATABASE_TIMEOUT=30

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
CORS_CREDENTIALS=true

# API Security (uncomment if implementing authentication)
# JWT_SECRET_KEY=your_jwt_secret_key_here
# JWT_ALGORITHM=HS256
# JWT_EXPIRATION=3600  # 1 hour

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================

# Logging
ENABLE_REQUEST_LOGGING=true
ENABLE_PERFORMANCE_LOGGING=true

# Health Checks
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=5

# Optional: External Monitoring Services
# SENTRY_DSN=your_sentry_dsn_here
# DATADOG_API_KEY=your_datadog_api_key_here
# NEW_RELIC_LICENSE_KEY=your_newrelic_license_key_here

# =============================================================================
# DEVELOPMENT & TESTING
# =============================================================================

# Development Flags
ENABLE_DEBUG_MODE=true
ENABLE_MOCK_DATA=false
ENABLE_API_DOCS=true

# Testing Configuration
TEST_DATABASE_URL=sqlite:///test.db
TEST_DATA_PATH=tests/fixtures/
PYTEST_TIMEOUT=30

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# API Timeouts
API_TIMEOUT=30
AGENT_PROCESSING_TIMEOUT=60
ML_MODEL_TIMEOUT=45

# Caching
ENABLE_RESPONSE_CACHE=true
CACHE_TTL=300  # 5 minutes
CACHE_MAX_SIZE=1000

# Rate Limiting (requests per minute)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# ML Features
ENABLE_ML_PREDICTIONS=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_MONTE_CARLO=true

# UI Features
ENABLE_DARK_MODE=true
ENABLE_ADVANCED_CHARTS=true
ENABLE_EXPORT_FEATURES=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# Financial Data Providers (uncomment if using)
# ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
# YAHOO_FINANCE_API_KEY=your_yahoo_finance_key_here
# QUANDL_API_KEY=your_quandl_key_here

# Cloud Storage (uncomment if using)
# AWS_ACCESS_KEY_ID=your_aws_access_key_here
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=financial-optimizer-data

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Environment Identification
DEPLOYMENT_ENV=local
VERSION=1.0.0
BUILD_NUMBER=local-build

# Resource Limits
MAX_MEMORY_MB=512
MAX_CPU_PERCENT=80
MAX_CONCURRENT_REQUESTS=50

# =============================================================================
# BACKUP & RECOVERY
# =============================================================================

# Backup Configuration
ENABLE_AUTO_BACKUP=false
BACKUP_INTERVAL=86400  # 24 hours
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=backups/

# =============================================================================
# NOTES
# =============================================================================

# 1. Never commit this file with real secrets to version control
# 2. Use different values for development, staging, and production
# 3. Some variables are optional and only needed for specific features
# 4. Boolean values should be: true/false (lowercase)
# 5. Numeric values should not be quoted
# 6. File paths should be relative to project root or absolute paths
# 7. URLs should include protocol (http:// or https://)
# 8. For production, consider using a secrets management service